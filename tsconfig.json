{
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "outDir": "dist", // added from prisma example
    "lib": ["esnext", "dom"], // added from prisma example,
    "rootDir": "./src" /* Specify the root folder within your source files. */,
    "baseUrl": "./src"
  }
}